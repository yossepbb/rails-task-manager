
<h2><strong>My task</strong> </h2>

  <% @tasks.each do |task| %>
    <ul>
      <li><%= raw(check_completed(task)) %>-<%= link_to "#{task.title}", task_path(task.id)%></li>
      <%= link_to task_path(task),
      method: :delete,
      data: { confirm: "Are you sure ?" } do %>
      <i class="fas fa-trash-alt"></i>
      <%end%>
       <p>---------  </p>
    </ul>

  <%end%>
  <%=link_to "New task" ,new_task_path()%>

